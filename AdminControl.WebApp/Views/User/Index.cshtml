@model UserListViewModel
@{
    ViewData["Title"] = "Користувачі";
}

<div class="d-flex justify-content-between align-items-start mb-4">
    <div class="page-header mb-0">
        <h1 class="page-title">Користувачі</h1>
        <p class="page-subtitle">Управління обліковими записами (@Model.TotalItems)</p>
    </div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-plus me-2"></i>Створити
        </a>
    }
</div>

<!-- Filters -->
<div class="filters-bar">
    <form method="get" asp-action="Index" class="row g-3">
        <div class="col-md-4">
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
                <input type="text" name="search" class="form-control" placeholder="Пошук за іменем, email, логіном..." 
                       value="@Model.SearchTerm" />
            </div>
        </div>
        <div class="col-md-3">
            <select name="roleId" class="form-select">
                <option value="">Всі ролі</option>
                @foreach (var role in Model.AvailableRoles)
                {
                    <option value="@role.RoleID" selected="@(Model.RoleFilter == role.RoleID)">@role.RoleName</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <select name="isActive" class="form-select">
                <option value="">Всі статуси</option>
                <option value="true" selected="@(Model.ActiveFilter == true)">Активні</option>
                <option value="false" selected="@(Model.ActiveFilter == false)">Неактивні</option>
            </select>
        </div>
        <div class="col-md-2">
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary flex-grow-1">
                    <i class="bi bi-funnel"></i>
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-lg"></i>
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Users Table -->
<div class="table-container">
    @if (Model.Users.Any())
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Користувач</th>
                        <th>Email</th>
                        <th>Роль</th>
                        <th>Статус</th>
                        <th class="text-end">Дії</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        var initials = $"{user.FirstName.FirstOrDefault()}{user.LastName.FirstOrDefault()}".ToUpper();
                        var isAdmin = user.RoleName.Equals("Admin", StringComparison.OrdinalIgnoreCase);
                        var canEdit = User.IsInRole("Admin") || (!isAdmin && User.IsInRole("Manager"));
                        var canDelete = User.IsInRole("Admin");
                        
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-3">
                                    <div class="avatar @(isAdmin ? "bg-danger-subtle text-danger" : "")">
                                        @initials
                                    </div>
                                    <div>
                                        <div class="fw-semibold">@user.FullName</div>
                                        <small class="text-muted">@@@user.Login</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <a href="mailto:@user.Email" class="text-decoration-none">@user.Email</a>
                            </td>
                            <td>
                                @{
                                    var badgeClass = user.RoleName switch
                                    {
                                        "Admin" => "bg-danger",
                                        "Manager" => "bg-primary",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @badgeClass">@user.RoleName</span>
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge badge-status badge-active">
                                        <i class="bi bi-check-circle me-1"></i>Активний
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-status badge-inactive">
                                        <i class="bi bi-x-circle me-1"></i>Неактивний
                                    </span>
                                }
                            </td>
                            <td>
                                <div class="d-flex justify-content-end gap-1">
                                    <a asp-action="Details" asp-route-id="@user.UserID" 
                                       class="btn btn-sm btn-outline-secondary" title="Деталі">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    @if (canEdit)
                                    {
                                        <a asp-action="Edit" asp-route-id="@user.UserID" 
                                           class="btn btn-sm btn-outline-primary" title="Редагувати">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    }
                                    @if (canEdit)
                                    {
                                        <form asp-action="ToggleStatus" asp-route-id="@user.UserID" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            @if (user.IsActive)
                                            {
                                                <button type="submit" class="btn btn-sm btn-outline-warning" 
                                                        title="Деактивувати" 
                                                        onclick="return confirm('Деактивувати користувача @user.FullName?')">
                                                    <i class="bi bi-pause-circle"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-sm btn-outline-success" 
                                                        title="Активувати">
                                                    <i class="bi bi-play-circle"></i>
                                                </button>
                                            }
                                        </form>
                                    }
                                    @if (canDelete)
                                    {
                                        <a asp-action="Delete" asp-route-id="@user.UserID" 
                                           class="btn btn-sm btn-outline-danger" title="Видалити">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="card-footer d-flex justify-content-between align-items-center">
                <span class="text-muted small">
                    Показано @((Model.CurrentPage - 1) * Model.PageSize + 1) - 
                    @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalItems) з @Model.TotalItems
                </span>
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@(Model.CurrentPage - 1)"
                               asp-route-search="@Model.SearchTerm"
                               asp-route-roleId="@Model.RoleFilter"
                               asp-route-isActive="@Model.ActiveFilter">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                <a class="page-link" asp-action="Index" 
                                   asp-route-page="@i"
                                   asp-route-search="@Model.SearchTerm"
                                   asp-route-roleId="@Model.RoleFilter"
                                   asp-route-isActive="@Model.ActiveFilter">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@(Model.CurrentPage + 1)"
                               asp-route-search="@Model.SearchTerm"
                               asp-route-roleId="@Model.RoleFilter"
                               asp-route-isActive="@Model.ActiveFilter">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-people"></i>
            <h5>Користувачів не знайдено</h5>
            <p>Спробуйте змінити параметри фільтрації</p>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="bi bi-person-plus me-2"></i>Створити користувача
                </a>
            }
        </div>
    }
</div>
