@model LoginViewModel
@{
    ViewData["Title"] = "Вхід";
}

<div class="row justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="col-md-4">
        <div class="text-center mb-4">
            <h1 class="h3 fw-bold text-primary"><i class="bi bi-shield-lock-fill me-2"></i>AdminControl</h1>
            <p class="text-muted">Введіть свої дані для входу</p>
        </div>

        <div class="card card-custom shadow-lg">
            <div class="card-body p-4 p-md-5">
                <form asp-action="Login" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger small py-2 mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Login" class="form-label text-muted small fw-bold">ЛОГІН</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-person"></i></span>
                            <input asp-for="Login" class="form-control border-start-0 ps-0 bg-light" placeholder="Введіть логін" autofocus />
                        </div>
                        <span asp-validation-for="Login" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Password" class="form-label text-muted small fw-bold">ПАРОЛЬ</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-key"></i></span>
                            <input asp-for="Password" class="form-control border-start-0 ps-0 bg-light" placeholder="•••••••" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-4 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label text-muted small">Запам'ятати мене</label>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary-custom py-2">Увійти</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="text-center mt-3 text-muted small">
            &copy; @DateTime.Now.Year AdminControl System
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}