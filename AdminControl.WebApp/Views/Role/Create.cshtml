@model AdminControl.DTO.RoleCreateDto
@{
    ViewData["Title"] = "Створити роль";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="page-header">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Role" asp-action="Index">Ролі</a></li>
                    <li class="breadcrumb-item active">Створення</li>
                </ol>
            </nav>
            <h1 class="page-title">Створити роль</h1>
            <p class="page-subtitle">Додайте нову роль для управління доступом</p>
        </div>

        <div class="card">
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-4">
                        <label asp-for="RoleName" class="form-label">
                            Назва ролі <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-tag"></i></span>
                            <input asp-for="RoleName" class="form-control" placeholder="напр. Moderator" autofocus />
                        </div>
                        <span asp-validation-for="RoleName" class="text-danger small"></span>
                        <small class="text-muted d-block mt-1">
                            Назва має бути унікальною та описувати рівень доступу
                        </small>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Скасувати
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-2"></i>Створити роль
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
