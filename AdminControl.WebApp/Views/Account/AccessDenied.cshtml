@{
    ViewData["Title"] = "Доступ заборонено";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card">
            <div class="card-body p-5 text-center">
                <div class="mb-4 text-danger">
                    <i class="bi bi-shield-x" style="font-size: 5rem;"></i>
                </div>
                
                <h2 class="fw-bold mb-3">Доступ заборонено</h2>
                
                <p class="text-muted mb-4">
                    У вас недостатньо прав для доступу до цього ресурсу.<br>
                    Зверніться до адміністратора системи.
                </p>

                @if (ViewBag.ReturnUrl != null)
                {
                    <p class="text-muted small mb-4">
                        <i class="bi bi-link-45deg me-1"></i>
                        Запитуваний ресурс: <code>@ViewBag.ReturnUrl</code>
                    </p>
                }

                <div class="d-flex justify-content-center gap-3">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-house me-2"></i>На головну
                    </a>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Назад
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
