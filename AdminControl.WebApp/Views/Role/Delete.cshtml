@model AdminControl.DTO.RoleDto
@{
    ViewData["Title"] = "Видалити роль";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card card-custom border-danger border-top border-3">
            <div class="card-body p-5 text-center">
                <div class="mb-4 text-danger">
                    <i class="bi bi-exclamation-circle" style="font-size: 3rem;"></i>
                </div>
                <h3 class="fw-bold mb-2">Ви впевнені?</h3>
                <p class="text-muted mb-4">
                    Ви збираєтесь видалити роль <strong class="text-dark">@Model.RoleName</strong>.<br>
                    Цю дію неможливо скасувати.
                </p>

                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.RoleID" />
                    <div class="d-flex justify-content-center gap-3">
                        <a asp-action="Index" class="btn btn-light px-4">Скасувати</a>
                        <button type="submit" class="btn btn-danger px-4">Видалити</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>