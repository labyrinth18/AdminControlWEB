@model AdminControl.DTO.RoleDto
@{
    ViewData["Title"] = "Видалити роль";
    var userCount = ViewBag.UserCount ?? 0;
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        @if ((int)userCount > 0)
        {
            <div class="card border-warning border-top border-3">
                <div class="card-body p-5 text-center">
                    <div class="mb-4 text-warning">
                        <i class="bi bi-exclamation-circle" style="font-size: 4rem;"></i>
                    </div>
                    <h3 class="fw-bold mb-3">Неможливо видалити</h3>
                    <p class="text-muted mb-4">
                        Роль <strong class="text-dark">@Model.RoleName</strong> використовується 
                        <strong>@userCount</strong> користувачами.
                    </p>
                    <p class="text-muted">
                        Спочатку змініть роль для цих користувачів, або видаліть їх.
                    </p>
                    <a asp-action="Index" class="btn btn-outline-secondary mt-3">
                        <i class="bi bi-arrow-left me-2"></i>Повернутися
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="card border-danger border-top border-3">
                <div class="card-body p-5 text-center">
                    <div class="mb-4 text-danger">
                        <i class="bi bi-exclamation-triangle" style="font-size: 4rem;"></i>
                    </div>
                    <h3 class="fw-bold mb-3">Видалити роль?</h3>
                    <p class="text-muted mb-4">
                        Ви збираєтесь видалити роль <strong class="text-dark">@Model.RoleName</strong>.<br>
                        Цю дію неможливо скасувати.
                    </p>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@Model.RoleID" />
                        @Html.AntiForgeryToken()
                        
                        <div class="d-flex justify-content-center gap-3">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-x-lg me-2"></i>Скасувати
                            </a>
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash me-2"></i>Видалити
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>
</div>
