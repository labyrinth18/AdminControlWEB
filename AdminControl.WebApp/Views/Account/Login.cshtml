@model LoginViewModel
@{
    ViewData["Title"] = "Вхід";
    Layout = "_Layout";
}

<div class="login-card">
    <div class="login-header">
        <i class="bi bi-shield-lock-fill"></i>
        <h1>AdminControl</h1>
        <p>Панель адміністрування</p>
    </div>

    <div class="login-body">
        <form asp-action="Login" method="post">
            <input type="hidden" asp-for="ReturnUrl" />

            <div asp-validation-summary="ModelOnly" class="alert alert-danger small py-2 mb-3"></div>

            <div class="mb-3">
                <label asp-for="Login" class="form-label">Логін</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    <input asp-for="Login" class="form-control" placeholder="Введіть логін" autofocus />
                </div>
                <span asp-validation-for="Login" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Пароль</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-key"></i></span>
                    <input asp-for="Password" class="form-control" type="password" id="loginPassword" placeholder="Введіть пароль" />
                    <button class="btn btn-outline-secondary" type="button" data-toggle-password="loginPassword">
                        <i class="bi bi-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label text-muted small">
                        Запам'ятати мене
                    </label>
                </div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary py-2">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Увійти
                </button>
            </div>
        </form>

        <hr class="my-4" />

        <div class="text-center text-muted small">
            <p class="mb-2">Доступ тільки для адміністраторів та менеджерів</p>
            <p class="mb-0">&copy; @DateTime.Now.Year AdminControl System</p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
