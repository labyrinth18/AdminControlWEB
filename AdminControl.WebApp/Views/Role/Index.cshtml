@model List<AdminControl.DTO.RoleDto>
@{
    ViewData["Title"] = "Управління ролями";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-0 text-dark">Ролі</h2>
        <p class="text-muted small">Управління рівнями доступу користувачів</p>
    </div>
    <a asp-action="Create" class="btn btn-primary-custom shadow-sm">
        <i class="bi bi-plus-lg me-1"></i> Створити роль
    </a>
</div>

<div class="card card-custom">
    <div class="card-body p-0">
        <table class="table table-custom table-hover mb-0">
            <thead>
                <tr>
                    <th class="ps-4" style="width: 10%;">ID</th>
                    <th style="width: 60%;">Назва</th>
                    <th class="text-end pe-4" style="width: 30%;">Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4 fw-bold text-secondary">#@item.RoleID</td>
                        <td class="fw-semibold text-dark">
                            <i class="bi bi-shield me-2 text-primary"></i>@item.RoleName
                        </td>
                        <td class="text-end pe-4">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.RoleID" class="btn btn-sm btn-outline-secondary" title="Редагувати">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.RoleID" class="btn btn-sm btn-outline-danger" title="Видалити">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @if (!Model.Any())
        {
            <div class="text-center p-5 text-muted">
                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                <span>Список ролей порожній</span>
            </div>
        }
    </div>
</div>